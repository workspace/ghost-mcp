{
  "name": "@ryukimin/ghost-mcp",
  "version": "1.0.1",
  "type": "module",
  "description": "MCP (Model Context Protocol) server for Ghost CMS - enables AI assistants to interact with Ghost blogs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ghost-mcp": "dist/index.js",
    "ghost-mcp-sse": "dist/sse.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:sse": "node dist/sse.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ghost",
    "ghost-cms",
    "cms",
    "blog",
    "ai",
    "llm",
    "claude",
    "anthropic"
  ],
  "author": "workspace",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/workspace/ghost-mcp.git"
  },
  "homepage": "https://github.com/workspace/ghost-mcp#readme",
  "bugs": {
    "url": "https://github.com/workspace/ghost-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "DEPLOYMENT.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@types/express": "^5.0.6",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.6"
  }
}
